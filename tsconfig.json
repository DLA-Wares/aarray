{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,
		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		],

	},
	"compileOnSave": false,
	"exclude": [ "./**.js", "./src/**/*.bak.ts", "node_modules", "dist"],
	"include": [ "./src/**/*.ts" ]
}
